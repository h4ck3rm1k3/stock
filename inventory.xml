<?xml version="1.0"?>
<tryton>
    <data>

        <record model="ir.ui.view" id="inventory_select_init_view_form">
            <field name="model">stock.inventory.cancel.init</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <![CDATA[
                <form string="Cancel Inventory" col="1">
                    <separator string="Warning"/>
                    <label string="All generated moves will be cancelled."/>
                </form>
                ]]>
            </field>
        </record>
        <record model="ir.action.wizard" id="wizard_inventory_cancel">
            <field name="name">Cancel Inventory</field>
            <field name="wiz_name">stock.inventory.cancel</field>
        </record>

        <record model="ir.ui.view" id="inventory_view_form">
            <field name="model">stock.inventory</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <![CDATA[
                    <form string="Inventory" col="6">
                        <label name="location"/>
                        <field name="location"/>
                        <label name="lost_found"/>
                        <field name="lost_found"/>
                        <label name="date"/>
                        <field name="date"/>
                        <field name="lines" colspan="6"/>
                        <group col="4" colspan="6">
                            <label name="state"/>
                            <field name="state"/>
                            <group colspan="2" col="2">
                                <button string="Confirm"
                                    name="set_state_done" type="object"
                                    states="{'invisible': '''state in ('done','cancel') '''}"/>
                                <button string="Cancel"
                                    name="%(wizard_inventory_cancel)d" type="action"
                                    states="{'invisible': '''state in ('open','cancel') '''}"/>
                            </group>
                        </group>
                    </form>
                ]]>
            </field>
        </record>
        <record model="ir.ui.view" id="inventory_view_tree">
            <field name="model">stock.inventory</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <![CDATA[
                    <tree string="Inventories">
                        <field name="location" select="1"/>
                        <field name="date" select="1"/>
                        <field name="state" select="1"/>
                    </tree>
                ]]>
            </field>
        </record>
        <record model="ir.action.act_window" id="act_inventory_form">
            <field name="name">Inventories</field>
            <field name="res_model">stock.inventory</field>
            <field name="view_type">form</field>
        </record>
        <record model="ir.action.act_window.view"
                id="act_inventory_form_view1">
            <field name="sequence" eval="1"/>
            <field name="view" ref="inventory_view_tree"/>
            <field name="act_window" ref="act_inventory_form"/>
        </record>
        <record model="ir.action.act_window.view"
            id="act_inventory_form_view2">
            <field name="sequence" eval="2"/>
            <field name="view" ref="inventory_view_form"/>
            <field name="act_window" ref="act_inventory_form"/>
        </record>
        <menuitem parent="menu_stock" sequence="5"
            action="act_inventory_form" id="menu_inventory_form"/>

        <record model="ir.ui.view" id="inventory_line_view_form">
            <field name="model">stock.inventory.line</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <![CDATA[
                    <form string="Inventory Line" col="6">
                        <label name="product"/>
                        <field name="product"/>
                        <label name="quantity"/>
                        <field name="quantity"/>
                        <label name="uom"/>
                        <field name="uom"/>
                        <label name="inventory"/>
                        <field name="inventory"/>
                    </form>
                ]]>
            </field>
        </record>
        <record model="ir.ui.view" id="inventory_line_view_tree">
            <field name="model">stock.inventory.line</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <![CDATA[
                    <tree string="Inventory Lines" editable="bottom">
                        <field name="product" select="1"/>
                        <field name="quantity" select="2"/>
                        <field name="uom" select="2"/>
                    </tree>
                ]]>
            </field>
        </record>

        <record model="ir.action.wizard" id="act_complete_inventory">
            <field name="name">Complete Inventory</field>
            <field name="wiz_name">stock.inventory.complete</field>
        </record>
        <record model="ir.action.keyword" id="act_complete_inventory_keyword">
            <field name="keyword">form_action</field>
            <field name="model">stock.inventory,0</field>
            <field name="action" ref="act_complete_inventory"/>
        </record>

    </data>
</tryton>
