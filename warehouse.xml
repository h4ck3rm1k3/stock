<?xml version="1.0"?>
<tryton>
    <data>
        <menuitem name="Inventory Management" sequence="3" id="menu_stock"/>
        <record model="ir.ui.view" id="warehouse_view_form">
            <field name="model">stock.warehouse</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <![CDATA[
                    <form string="Warehouse">
                        <label name="name"/>
                        <field name="name"/>
                        <label name="address"/>
                        <field name="address"/>
                        <label name="input_location"/>
                        <field name="input_location"/>
                        <label name="output_location"/>
                        <field name="output_location"/>
                        <label name="store_location"/>
                        <field name="store_location"/>
                        <separator name="locations" colspan="4"/>
                        <field name="locations" colspan="4"/>
                    </form>
                ]]>
            </field>
        </record>
        <record model="ir.ui.view" id="warehouse_view_tree">
            <field name="model">stock.warehouse</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <![CDATA[
                    <tree string="Warehouses">
                        <field name="name"/>
                        <field name="address"/>
                    </tree>
                ]]>
            </field>
        </record>
        <record model="ir.action.act_window" id="act_warehouse_form">
            <field name="name">Warehouses</field>
            <field name="res_model">stock.warehouse</field>
            <field name="view_type">form</field>
        </record>
        <record model="ir.action.act_window.view" id="act_warehouse_form_view1">
            <field name="sequence" eval="1"/>
            <field name="view" ref="warehouse_view_tree"/>
            <field name="act_window" ref="act_warehouse_form"/>
        </record>
        <record model="ir.action.act_window.view" id="act_warehouse_form_view2">
            <field name="sequence" eval="2"/>
            <field name="view" ref="warehouse_view_form"/>
            <field name="act_window" ref="act_warehouse_form"/>
        </record>
        <menuitem parent="menu_stock" sequence="1"
            action="act_warehouse_form" id="menu_warehouse_form"/>



        <record model="res.group" id="group_stock_admin">
            <field name="name">Stock administration</field>
        </record>
        <record model="res.user" id="res.user_admin">
            <field name="groups" eval="[('add', ref('group_stock_admin'))]"/>
        </record>

        <record model="ir.model.access" id="access_warehouse">
            <field name="model" search="[('model', '=', 'stock.warehouse')]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>
        <record model="ir.model.access" id="access_stock_admin">
            <field name="model" search="[('model', '=', 'stock.warehouse')]"/>
            <field name="group" ref="group_stock_admin"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>


    </data>
</tryton>
